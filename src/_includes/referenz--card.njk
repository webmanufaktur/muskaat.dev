<div class="project">
  <a href="{{ ref.url }}">
  <div class="cover project--{{ ref.fileSlug }}">
    <div class="index">
    <div class="logo">
      {% set src = "src" + ref.url + ref.data.logo %}
      {% set alt = "Logo " + ref.data.title %}
      {% set sizes = "(min-width: 300px) 800w, 100w" %}
      {% imageSimple src, alt, sizes %}
    </div>

      {# <div class="logo"><img src="{{ref.url}}{{ref.data.logo}}" loading="lazy" alt="Logo {{ ref.data.title }}"></div> #}
      <div class="title">{{ref.data.title}}</div>
      <div class="desc">{{ref.data.desc}}</div>
      <div class="topics"><ul>{%- for topic in ref.data.topics -%}<li>{{ topic }}</li>{%- endfor -%}</ul></div>
    </div>
    <div class="image">
      {% set src = "src" + ref.url + ref.data.screenDesktop %}
      {% set alt = "Screenshot " + ref.data.title %}
      {% set sizes = "(min-width: 300px) 800w, 100w" %}
      {% imageSimple src, alt, sizes %}
    </div>
  </div>
  </a>
</div>
